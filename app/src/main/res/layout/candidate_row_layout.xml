<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="60dp"
	android:layout_margin="5dp"
	app:cardCornerRadius="5dp"
	app:elevation="2dp">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp">

		<TextView
			android:id="@+id/candidateId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textColor="@android:color/black"
			android:textSize="18sp"
			tools:text="352"
			/>


		<TextView
			android:id="@+id/candidateName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:text="@string/candidate_name"
			android:textColor="@android:color/black"
			android:textSize="18sp"
			tools:text="John d"
			android:layout_below="@+id/candidateId"/>



		<TextView
			android:id="@+id/candidateStatus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:textColor="@android:color/black"
			android:textSize="18sp"
			tools:text="Started"/>

		<ImageView
			android:id="@+id/candidateMenu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_overflow"
			android:layout_below="@+id/candidateStatus"
			android:layout_alignParentRight="true"
			android:layout_alignTop="@+id/candidateName"/>

	</RelativeLayout>
</android.support.v7.widget.CardView>